<?php
$servername = "localhost";
$username = "root";
$password = "";
$dbname = "table";
$usn_no=$_POST["usn"];
$firstname=$_POST["firstname"];
$lastname=$_POST["lastname"];
$department=$_POST["department"];
$semester=$_POST["semester"];
$proctorname=$_POST["proctorname"];
// Create connection
$conn = new mysqli($servername, $username, $password, $dbname);
// Check connection
if ($conn->connect_error) {
die("Connection failed: " . $conn->connect_error);
}
$sql = "INSERT INTO form (usn,firstname,lastname,department,semester,proctorname)
VALUES ('$usn_no','$firstname','$lastname','$department','$semester','$proctornam
e')";
if ($conn->query($sql) === TRUE) {
echo "You have succesfully registered using the BMSCE Registration Portal. Thank
you for using this service! <br>";
} else {
echo "Error: " . $sql . "<br>" . $conn->error;
}
$sql = "SELECT usn,firstname,lastname,department,semester,proctorname FROM form";
$result = $conn->query($sql);
if ( $result->num_rows >0) {
 // output data of each row
 echo '<br><br><table border="5">';
 echo '<tr>';
 echo'<th>USN</th>
 <th>First Name</th>
 <th>Last Name</th>
 <th>Department</th>
 <th>Semester</th>
 <th>Proctor Name</th>';
 echo'<tr>';
 while($row = $result->fetch_assoc()) {
 echo '<tr>';
 echo ' <td>' . $row["usn"] . '</td>';
 echo ' <td>' . $row["firstname"] . '</td>';
 echo ' <td>' . $row["lastname"] . '</td>';
 echo ' <td>' . $row["department"] . '</td>';
 echo ' <td>' . $row["semester"] . '</td>';
 echo ' <td>' . $row["proctorname"] . '</td>';
 echo ' </tr> '; 
 }
echo'</table>';
}
else {
echo "0 results";
}
$conn->close();

?>
